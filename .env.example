.env.example
# Application Settings
FLASK_ENV=development
DEBUG=True
SECRET_KEY=your-secret-key-here

# Database
DATABASE_URL=sqlite:///job_application.db
# For PostgreSQL: postgresql://user:password@localhost/dbname

# Email Configuration
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
SENDER_EMAIL=your-email@gmail.com
SENDER_PASSWORD=your-app-password

# Candidate Information
CANDIDATE_NAME=Md Aftab Alam
CANDIDATE_EMAIL=aftab.work86@gmail.com

# Application Limits
DAILY_APPLICATION_LIMIT=20
MATCH_SCORE_THRESHOLD=70

# Job Portals
JOB_PORTALS=naukri,linkedin,monster,indeed

# Preferred Locations
PREFERRED_LOCATIONS=Hyderabad,Noida,Delhi NCR,Gurgaon,Mumbai,Kolkata

# Local LLM (Ollama)
OLLAMA_BASE_URL=http://127.0.0.1:11434
OLLAMA_MODEL=llama3.2:3b
OLLAMA_EMBED_MODEL=llama3.2:3b

# Naukri automation credentials
# Note: For security reasons, it's recommended to use environment variables or a secure vault to store sensitive information like email and password.
NAUKRI_EMAIL=
NAUKRI_PASSWORD=
